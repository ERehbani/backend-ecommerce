<a href="/profile">Perfil</a>
  <b>ya va a llegar el dia en el que voy a estilizar esto y vas a quedar re loco
    fede vas a ver sólo dame 3 meses más</b>
{{/if}}
{{#if req}}
  <a href="/api/logout">Logout</a>
{{/if}}
{{#each nuevoArray}}
  <div>
    <a href="/product/{{this._id}}" target="_blank">{{this.title}}</a>
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Category: {{category}} </p>
    <button> Agregar al Carrito </button>
  </div>
{{/each}}

<p>Pagina {{currentPage}} de {{totalPages}} </p>
{{#if hasNextPage}}
  <a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}}
{{#if hasPrevPage}}
  <a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}


